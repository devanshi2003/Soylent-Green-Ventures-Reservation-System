<style type="text/css">
    body {
        position: relative;
        background-image: url('/img/Mexican Restaurant.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        margin: 0;
        padding: 0;
    }

    .background-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('/img/Mexican Restaurant.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        filter: blur(5px);
        z-index: -1;
    }

    #fusion-container {
        background-color: #dae1e6;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        padding: 20px;
        border-radius: 10px;
    }


    .btn-custom {
        width: 300px;
        height: 50px;
        font-size: 18px;
        background-color: #dae1e6;
        font-family: sans-serif;
        font-weight: bold;
        color: #000000;
        border: 2px solid #dae1e6;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        border-radius: 5px;
        transition: background-color 0.3s, color 0.3s; /* Transition for hover effect */
    }


        .btn-custom:hover {
            background-color: #c4cacf;
            color: #000000;
            border: 2px solid #c4cacf;
            transition: background-color 0.3s, color 0.3s; /* Smooth transition back to normal */
        }



    .content-container {
        border: none;
        padding: 20px;
        margin: 20px auto;
        max-width: 600px;
        max-height: 600px;
        border-radius: 20px;
        background-color: rgba(196, 204, 210, 0.9);
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .row {
        display: flex;
    }

    .column {
        padding: 20px;
    }




        .column:nth-child(1) {
            flex: 1;
        }

        .column:nth-child(2) {
            flex: 1;
        }

    label {
        text-align: left;
        margin-bottom: 0;
        padding-bottom: 0;
        margin-top: 30px;
    }

    input {
        margin-top: 0;
        margin-bottom: 0;
        padding-bottom: 0;
    }

    .checked {
        color: orange;
    }

    .row span {
        display: inline-block;
    }
</style>





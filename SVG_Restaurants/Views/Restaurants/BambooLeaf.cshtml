<body>

    <!-- Container for the page content -->





    <div class="text-center">

        <div class="flex justify-center">
            <!-- Your image is placed within this container -->
            <img src="/img/BambooLeaf.png" alt="Image of Bamboo Leaf Restaurant Logo" class="h-9" />

        </div>
        <p class="text-xl text-sm mb-2 dark:text-black" style="font-family: Baskerville">Modern Asian Fusion in the Heart of Adelaide</p>
    </div>


    <div class="text-4xl leading-8" style="color:#fcfcfc">SPACING</div>


    <!-- Rest of your page content goes here -->

    <div class="row">
        <div class="column text-center">
            <img src="/img/Bamboo Restaurant.jpg" />
            <h2 class="text-xl leading-8 text-gray-700"><b>FAQs</b></h2>
            <p class="text-l leading-8 text-gray-700">
                25 Gouger Street
                Adelaide
            </p>
            <p class="text-l leading-8 text-gray-700"><b>Open:</b> Tuesdays to Sundays</p>
            <br />
            <p class="text-2xl leading-8 text-gray-700"><b>Special Banquets</b></p>
            <br />
            <p class="text-xl leading-8 text-gray-700">
                <b>Share Banquet $55PP</b>
            </p>

            <p class="text-l leading-6 text-gray-700">
                (min 4 people)
                <br />
                <br />
                Satay Chicken
                <br />
                Steam prawn dumplings
                <br />
                S+P Squid
                <br />
                Roast Pork
                <br />
                Sticky pork
                <br />
                Asian green
                <br />
            </p>
            <br />
            <p class="text-xl leading-8 text-gray-700">
                <b>Feast Banquet $70PP</b>
            </p>
            <p class="text-l leading-6 text-gray-700">
                (min 4 people)
                <br />
                <br />
                Crispy beef
                <br />
                Satay chicken
                <br />
                S+P Eggplant
                <br />
                Crying Tiger Salad
                <br />
                Steam prawn dumplings
                <br />
                Ribs
                <br />
                Barramundi curry
            </p>
        </div>

        <div class="column text-center">
            <h2 class="text-3xl leading-8" style="color: #E1C16E"><b>Make a reservation</b></h2>

            <div class="text-4xl leading-8" style="color:#fcfcfc">SPACING</div>

            <!-- Sharobp=nn me -->
            <div class="mx-auto w-full max-w-[550px]">
                <form action="https://formbold.com/s/FORM_ID" method="POST">

                    <div class="-mx-3 flex flex-wrap">
                        <div class="w-full px-3 sm:w-1/2">

                            <div class="mb-5">
                                <label for="fName"
                                       class="mb-3 block text-base font-medium text-[#07074D]">
                                    First Name
                                </label>
                                <input type="text"
                                       name="fName"
                                       id="fName"
                                       placeholder="First Name"
                                       class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                            </div>

                        </div>
                        <div class="w-full px-3 sm:w-1/2">
                            <div class="mb-5">
                                <label for="lName"
                                       class="mb-3 block text-base font-medium text-[#07074D]">
                                    Last Name
                                </label>
                                <input type="text"
                                       name="lName"
                                       id="lName"
                                       placeholder="Last Name"
                                       class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                            </div>
                        </div>
                    </div>



                    <div class="mb-5">
                        <label for="guest"
                               class="mb-3 block text-base font-medium text-[#07074D]">
                            How many guest are you bringing?
                        </label>
                        <input type="number"
                               name="guest"
                               id="guest"
                               placeholder="5"
                               min="0"
                               class="w-full appearance-none rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                    </div>



                    <div class="mb-5">
                        <label for="specialBanquets" class="mb-3 block text-base font-medium text-[#07074D]">
                            Special Banquets
                        </label>
                        <select name="specialBanquets" id="specialBanquets" class="w-full h-12 rounded-md border border-[#e0e0e0] bg-white py-3 px-8 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1]">
                            <option value="shareBanquet">Share Banquet</option>
                            <option value="feastBanquet">Feast Banquet</option>
                        </select>
                    </div>






                    <div class="-mx-3 flex flex-wrap">
                        <div class="w-full px-3 sm:w-1/2">
                            <div class="mb-5">
                                <label for="date"
                                       class="mb-3 block text-base font-medium text-[#07074D]">
                                    Date
                                </label>
                                <input type="date"
                                       name="date"
                                       id="date"
                                       class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                            </div>
                        </div>
                        <div class="w-full px-3 sm:w-1/2">
                            <div class="mb-5">
                                <label for="time"
                                       class="mb-3 block text-base font-medium text-[#07074D]">
                                    Time
                                </label>
                                <input type="time"
                                       name="time"
                                       id="time"
                                       class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                            </div>
                        </div>
                    </div>












                    <div class="mb-5">
                        <label for="specialReq" class="mb-3 block text-base font-medium text-[#07074D] justify-content-start">
                            Special Requests?
                        </label>
                        <input type="text" name="specialReq" id="specialReq" placeholder="I am allergic to nuts"
                               class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                    </div>

                    <div class="form-check flex content-start">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label block text-base font-medium text-[#07074D]" for="flexCheckDefault">
                            Would you like a high chair for your child?
                        </label>
                    </div>






                    <div class="text-3xl leading-8" style="color:#fcfcfc">SPACING</div>






                    <div>
                        <button class="hover:shadow-form rounded-md bg-[#E1C16E] py-3 px-8 text-center text-base font-semibold text-white outline-none">
                            Reserve
                        </button>
                    </div>
                </form>
            </div>

        </div>

    </div>


    <!-- component -->





</body>
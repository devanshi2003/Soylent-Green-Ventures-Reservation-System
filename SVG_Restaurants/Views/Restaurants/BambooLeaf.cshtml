    .content-container {
        border: none;
        padding: 20px;
        margin: 20px auto;
        max-width: 600px;
        max-height: 600px;
        border-radius: 20px;
        background-color: rgba(252,252,252,0.9);
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .row {
        display: flex;
    }

    .column {
        padding: 20px;
    }




        .column:nth-child(1) {
            flex: 1;
        }

        .column:nth-child(2) {

@section Scripts {
    <script>// Function to check if a query parameter exists in the URL
        function getQueryParam(parameterName) {
            var urlParams = new URLSearchParams(window.location.search);
            return urlParams.has(parameterName);
        }

        // Check if "CustomerID" parameter is present in the URL
        var customerIdPresent = getQueryParam("CustomerID");

        // Display the logoutDiv if CustomerID is present
        if (customerIdPresent) {
            document.getElementById("logoutDiv").style.display = "block";
            document.getElementById("customerLoginDiv").style.display = "none";
            document.getElementById("staffLogintDiv").style.display = "none";
        }
        else {
            document.getElementById("logoutDiv").style.display = "none";
            document.getElementById("customerLoginDiv").style.display = "block";
            document.getElementById("staffLogintDiv").style.display = "block";
        }</script>
}